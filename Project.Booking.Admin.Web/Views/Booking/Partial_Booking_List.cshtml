@model List<BookingViewModel>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover " id="table-booking">
        <thead>
            <tr>
                <th>Book No.</th>
                <th>Unit Code</th>
                <th class="text-center">Status</th>
                <th>Book Date</th>
                <th>Payment Due Date</th>
                <th>OverDue</th>
                <th>Customer</th>
                <th>Mobile</th>
                <th>Book Amount</th>
                <th>Selling Price</th>
                <th>Discount</th>
                <th>Special Price</th>
                <th>Cancel Date</th>
                <th>Update Date</th>
                <th>Update By</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var bookingStatusStyle = "color:white;background-color:" + item.BookingStatusColor + ";";
            <tr>
                <td>@item.BookingNumber</td>
                <td>@item.UnitCode</td>
                <td align="center"><button class="btn btn-xs btn-default" style="@(bookingStatusStyle)width:90px;">@item.BookingStatusName</button></td>
                <td>@item.BookingDate.ToStringDateTime()</td>
                <td>@item.PaymentDueDate.ToStringDateTime()</td>
                <td>@item.OverDue.ToStringDateTime()</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerMobile</td>
                <td>@item.BookingAmount.AsDecimal().ToStringNumber()</td>
                <td>@item.SellingPrice.AsDecimal().ToStringNumber()</td>
                <td>@item.Discount.AsDecimal().ToStringNumber()</td>
                <td>@item.SpecialPrice.AsDecimal().ToStringNumber()</td>
                <td>@item.CancelDate.ToStringDateTime()</td>
                <td>@item.UserUpdateDate.ToStringDateTime()</td>
                <td>@item.UserUpdateByName</td>
                <th><a asp-controller="Booking" asp-action="Manage" asp-route-id="@item.BookingID" class="btn btn-xs btn-warning">Edit</a></th>
            </tr>
            }
        </tbody>
    </table>
</div>    