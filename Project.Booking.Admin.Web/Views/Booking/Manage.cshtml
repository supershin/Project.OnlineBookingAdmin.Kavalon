@model BookingViewModel
@{
    ViewData["Title"] = "Booking Management";
    ViewBag.Active = "Booking";
    Layout = "~/Views/Shared/_LayoutSitePage.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewData["Title"]</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                @ViewData["Title"]
            </div>
            <div id="div-frm-booking">
                <partial name="Partial_Booking_Form" model="Model" />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                Payment List
            </div>
            <div class="panel-body">
                <partial name="Partial_Payment_List" model="Model.Payments" />
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/pages/booking.js" asp-append-version="true" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            booking.initManage();
        });
    </script>
}
