@model List<UserProfile>
@{
    ViewData["Title"] = "User";
    ViewBag.Active = "User";
    Layout = "~/Views/Shared/_LayoutSitePage.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewData["Title"]</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-warning">
            <div class="panel-heading" style="display:flex">
                <div class="card-title">
                    <h5>User List</h5>
                </div>
                <div class="col-auto ml-auto d-print-none">
                    <a asp-action="Manage" class="btn btn-primary">Create User</a>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <partial name="Partial_User_List" model="Model" />
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#table-user').DataTable({
                responsive: true
            });
        });
    </script>
}